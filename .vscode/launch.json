{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "realtime_aud_ws_1:app",  
                "--host", "0.0.0.0",
                "--port", "8002",
                "--reload"
            ],
            "justMyCode": false,  // Allow stepping into external libraries
            "env": {
                "ENVIRONMENT": "development"
            },
            "console": "integratedTerminal"
        }
    ]
}


